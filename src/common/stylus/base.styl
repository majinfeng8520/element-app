body, html
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC', 'STHeiti', 'Helvetica', Arial, Sana


@media (-webkit-device-pixel-ratio: 1.5),(min-device-aspect-ratio: 1.5)
  .border-1px
    &::after
      -webkit-transform: scaleY(0.7)
      transform: scaleY(0.7)

@media (-webkit-device-pixel-ratio: 2),(min-device-aspect-ratio: 2)
  .border-1px
    &::after
      -webkit-transform: scaleY(0.5)
      transform: scaleY(0.5)
